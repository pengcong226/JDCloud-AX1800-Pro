
# ============================================================
# 【亚瑟·超频战神·满血版】配置
# Target: JDCloud AX1800 Pro (IPQ6000 / qualcommax-ipq60xx)
# Author: DarkShell (小黑)
# Warning: 编译时间约 2-3 小时，请耐心等待
# ============================================================

# --- 目标平台 (绝对正确，已验证) ---
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq60xx=y
CONFIG_TARGET_qualcommax_ipq60xx_DEVICE_jdcloud_ax1800-pro=y

# --- 编译优化 ---
CONFIG_DEVEL=y
CONFIG_CCACHE=y

# ============================================================
# 基础系统
# ============================================================
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-lib-ipkg=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_coreutils=y
CONFIG_PACKAGE_coreutils-nohup=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_zram-swap=y

# --- 主题 ---
CONFIG_PACKAGE_luci-theme-argon=y

# ============================================================
# CPU 性能调优 (超频支持)
# ============================================================
CONFIG_PACKAGE_luci-app-cpufreq=y
CONFIG_PACKAGE_cpufreq=y
# 内核调频驱动
CONFIG_PACKAGE_kmod-cpufreq-dt=y
# 温度监控
CONFIG_PACKAGE_lm-sensors=y
CONFIG_PACKAGE_kmod-hwmon-core=y

# ============================================================
# 4G/5G USB 驱动 (全套，一个不漏)
# ============================================================
# USB 核心
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-xhci-hcd=y
CONFIG_PACKAGE_kmod-usb-ehci=y
CONFIG_PACKAGE_kmod-usb-ohci=y

# USB 网络协议 (NCM/RNDIS/QMI/ECM/MBIM)
CONFIG_PACKAGE_kmod-usb-net=y
CONFIG_PACKAGE_kmod-usb-net-cdc-ncm=y
CONFIG_PACKAGE_kmod-usb-net-huawei-cdc-ncm=y
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=y
CONFIG_PACKAGE_kmod-usb-net-rndis=y
CONFIG_PACKAGE_kmod-usb-net-qmi-wwan=y
CONFIG_PACKAGE_kmod-usb-net-cdc-mbim=y
CONFIG_PACKAGE_kmod-usb-net-rtl8152=y
CONFIG_PACKAGE_kmod-usb-net-asix=y
CONFIG_PACKAGE_kmod-usb-net-asix-ax88179=y

# USB 串口 (AT 指令)
CONFIG_PACKAGE_kmod-usb-serial=y
CONFIG_PACKAGE_kmod-usb-serial-option=y
CONFIG_PACKAGE_kmod-usb-serial-wwan=y
CONFIG_PACKAGE_kmod-usb-serial-qualcomm=y
CONFIG_PACKAGE_kmod-usb-acm=y

# USB 存储
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-uas=y

# USB 工具
CONFIG_PACKAGE_usbutils=y
CONFIG_PACKAGE_usb-modeswitch=y
CONFIG_PACKAGE_picocom=y

# QMI 工具
CONFIG_PACKAGE_uqmi=y
CONFIG_PACKAGE_umbim=y

# ============================================================
# 网络加速 (TurboACC / SFE / BBR)
# ============================================================
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_kmod-shortcut-fe=y
CONFIG_PACKAGE_kmod-shortcut-fe-cm=y
CONFIG_PACKAGE_kmod-fast-classifier=y

# BBR 拥塞控制
CONFIG_PACKAGE_kmod-tcp-bbr=y

# ============================================================
# MWAN3 多线负载均衡
# ============================================================
CONFIG_PACKAGE_mwan3=y
CONFIG_PACKAGE_luci-app-mwan3=y
CONFIG_PACKAGE_luci-i18n-mwan3-zh-cn=y

# MWAN3 依赖 (iptables 系)
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_iptables-mod-conntrack-extra=y
CONFIG_PACKAGE_iptables-mod-ipopt=y
CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_kmod-ipt-ipset=y
CONFIG_PACKAGE_kmod-ipt-conntrack=y
CONFIG_PACKAGE_kmod-ipt-conntrack-extra=y
CONFIG_PACKAGE_kmod-ipt-nat=y
CONFIG_PACKAGE_kmod-ipt-nat-extra=y
CONFIG_PACKAGE_kmod-ipt-tproxy=y

# MWAN3 依赖 (nftables 系，22.03+ 兼容)
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_kmod-nft-core=y
CONFIG_PACKAGE_kmod-nft-nat=y
CONFIG_PACKAGE_kmod-nft-tproxy=y
CONFIG_PACKAGE_kmod-nfnetlink=y
CONFIG_PACKAGE_kmod-nf-conntrack=y
CONFIG_PACKAGE_kmod-nf-conntrack-netlink=y
CONFIG_PACKAGE_kmod-nf-nat=y
CONFIG_PACKAGE_kmod-nf-ipt=y

# ============================================================
# OpenClash (科学上网)
# ============================================================
CONFIG_PACKAGE_luci-app-openclash=y

# OpenClash 核心依赖
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_coreutils-nohup=y
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_ruby=y
CONFIG_PACKAGE_ruby-yaml=y
CONFIG_PACKAGE_unzip=y

# TUN 模块 (OpenClash TUN 模式必备)
CONFIG_PACKAGE_kmod-tun=y

# 透明代理支持
CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_kmod-ipt-tproxy=y
CONFIG_PACKAGE_kmod-nft-tproxy=y

# ============================================================
# AdGuardHome (广告过滤)
# ============================================================
CONFIG_PACKAGE_luci-app-adguardhome=y
CONFIG_PACKAGE_adguardhome=y

# ============================================================
# 应用商店 (后期扩展用)
# ============================================================
CONFIG_PACKAGE_luci-app-store=y
CONFIG_PACKAGE_linkease=y

# ============================================================
# 实用工具
# ============================================================
# UPnP 端口映射
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_miniupnpd=y

# ZeroTier 内网穿透
CONFIG_PACKAGE_luci-app-zerotier=y
CONFIG_PACKAGE_zerotier=y

# Watchcat 断网重连
CONFIG_PACKAGE_luci-app-watchcat=y
CONFIG_PACKAGE_watchcat=y

# TTYD 网页终端
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_ttyd=y

# 自动重启
CONFIG_PACKAGE_luci-app-autoreboot=y

# 磁盘管理 (挂载 U 盘用)
CONFIG_PACKAGE_luci-app-diskman=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_e2fsprogs=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y
CONFIG_PACKAGE_kmod-fs-vfat=y

# ============================================================
# IPv6 支持
# ============================================================
CONFIG_IPV6=y
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_kmod-ipt-nat6=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y

# ============================================================
# 语言包 (中文)
# ============================================================
CONFIG_LUCI_LANG_zh_Hans=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-opkg-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y

# ============================================================
# 禁用不需要的组件 (节省空间)
# ============================================================
# CONFIG_PACKAGE_wpad-basic-wolfssl is not set
CONFIG_PACKAGE_wpad-openssl=y
